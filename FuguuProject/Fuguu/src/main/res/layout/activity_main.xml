<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/white">

    <!-- Footer starts here !!! -->
    <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:layout_weight="1"
            >

        <Button android:id="@+id/buttonLoadPicture"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/list_selector"
                android:text="@string/load_picture"
                android:textColor="#616261"
                style="@style/ButtonForward"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:layout_weight=".2"
                android:layout_gravity="left|bottom"
                />
        <Button android:id="@+id/buttonTakePicture"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/list_selector"
                android:text="@string/take_picture"
                android:textColor="#616261"
                style="@style/ButtonForward"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"
                android:layout_weight=".2"
                android:layout_gravity="bottom|right"
                />

    </LinearLayout>

    <!--header -->
    <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:background="#d7dada"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >
        <ImageButton android:id="@+id/buttonProfilepic"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:src="@drawable/profilepic"
                     android:onClick="exit_button"
                     android:paddingLeft="10dp"
                     android:paddingRight="10dp"
                     android:paddingEnd="5dp"
                     android:paddingTop="5dp"
                     android:background="@drawable/simple_btn_effect"
                     android:layout_weight="0"
                     android:layout_marginTop="5dp">
        </ImageButton>
        <TextView
                android:id="@+id/txtusername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#616261"
                android:textStyle="bold"
                android:layout_gravity="top"
                android:layout_weight="1.5"
                android:gravity="left"
                android:layout_marginLeft="4dp">

        </TextView>
        <ImageButton android:id="@+id/buttonAddtext"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:src="@drawable/addtext"
                     android:onClick="exit_button"
                     android:paddingLeft="10dp"
                     android:paddingRight="20dp"
                     android:paddingEnd="5dp"
                     android:paddingTop="5dp"
                     android:background="@drawable/simple_btn_effect"
                     android:layout_weight=".2"
                     android:layout_marginTop="3dp"
                     android:layout_marginLeft="2dp">
        </ImageButton>

        <ImageButton android:id="@+id/buttonUserTimeline"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:src="@drawable/menu"
                     android:onClick="exit_button"
                     android:paddingLeft="10dp"
                     android:paddingRight="20dp"
                     android:paddingEnd="5dp"
                     android:paddingTop="5dp"
                     android:background="@drawable/simple_btn_effect"
                     android:layout_weight=".2"
                     android:layout_marginTop="3dp">
        </ImageButton>
        <ImageButton android:id="@+id/buttonUserlogout"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:src="@drawable/logout"
                     android:onClick="exit_button"
                     android:paddingLeft="10dp"
                     android:paddingRight="20dp"
                     android:paddingEnd="5dp"
                     android:paddingTop="5dp"
                     android:background="@drawable/simple_btn_effect"
                     android:layout_weight=".2"
                     android:layout_marginTop="3dp">
        </ImageButton>


    </LinearLayout>
    <!-- header ends -->

    <LinearLayout
            android:id="@+id/body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/header"
            android:layout_above="@id/footer"
            android:background="#ffffff"
            android:orientation="horizontal" >
        <ImageView
                android:id="@+id/imgView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@null">
        </ImageView>

        <!-- <EditText
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/editText"
                 android:layout_gravity="center_horizontal|top"
                />-->
    </LinearLayout>

</RelativeLayout>